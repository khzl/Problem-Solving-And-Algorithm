#include <iostream>
using namespace std;
struct person
{
	char Name[50];
	int Age;
	float Salary;
};
int main()
{
	person Person1;
	cout << "Enter Full Name: ";
	cin.get(Person1.Name, 50);
	cout << "Enter Age: ";
	cin >> Person1.Age;
	cout << "Enter Salary: ";
	cin >> Person1.Salary;
	cout << "\nDisplaying Information." << endl;
	cout << "Name: " << Person1.Name << endl;
	cout << "Age: " << Person1.Age << endl;
	cout << "Salary: " << Person1.Salary << endl;
	return 0;
}
